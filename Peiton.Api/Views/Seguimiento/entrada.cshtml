@using RazorLight;
@inherits TemplatePage<Peiton.Core.Entities.Agenda>
@using System;
@using System.Linq;
@using System.Text.RegularExpressions;
<!doctype html>

<head>
    <title></title>
    <meta charset="utf-8" />
    <style>
        p {
            font-size: 18px;
        }
    </style>
</head>

<body>
    <p style="text-align:center;font-size:20px; margin-bottom:40px;"><strong>@Model.Tutelado.Nombre
            @Model.Tutelado.Apellidos</strong><br />@Model.Tutelado.NumeroExpediente</p>
    <hr />
    <p>Fecha: @Model.Fecha.ToString("dd/MM/yyyy")</p>
    <p>Usuario: @Model.Usuario.NombreCompleto</p>
    <p>@Raw(Regex.Replace(Model.Descripcion, "\r?\n", "<br />"))</p>
</body>